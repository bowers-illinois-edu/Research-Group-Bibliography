}
@misc{King2010,
abstract = {This article presents a synthetic review of impact evaluations examining$\backslash$nthe effectiveness of community-driven development (CDD) and curriculum$\backslash$ninterventions in improving social cohesion in sub-Saharan Africa. The$\backslash$nreview found weakly positive impacts of CDD and curriculum interventions$\backslash$non social cohesion outcomes, although only two findings were replicated$\backslash$nacross studies: one positive and one negative. Causal chain analysis of$\backslash$ndata on implementation and contextual factors relating to the CDD$\backslash$ninterventions found that broad and substantive participation was often$\backslash$nlacking, suggesting the interventions have often not been carried out in$\backslash$naccordance with the theory of CDD.},
