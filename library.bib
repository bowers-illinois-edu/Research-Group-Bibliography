@unpublished{Abrami2010,
abstract = {Over the past year, Chinese newspapers have been filled with commentary on changes in the Vietnamese polity, which they deem to be more democratic. The discussion has been so intense that Chinese officials actually banned further discussion of the topic. The discussions pose an intriguing puzzle for comparative politics; as none of the indices of governance currently available are able to adequately account for the variation that Chinese journalists deem to be so important. The inability of these scales to capture within-typology variation is an important lacuna in our understanding of the behavior of authoritarian regimes. Using this puzzle as our starting point, we focus our analytical lens on accountability mechanisms within the two single-party states, finding significant differences in the distribution of powers within the party apparatus, between party and government, and with government institutions. We also document increasing separation on the openness and competitiveness of elections for the Central Committee and national parliaments. Our findings open up important avenues for research on regime durability and democratic transition.},
author = {Abrami, RM and Malesky, Edmund and Zheng, Y},
