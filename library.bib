pages = {1--46},
title = {{Does Media Fragmentation Produce Mass Polarization? Selective Exposure and a New Era of Minimal Effects}},
year = {2010}
}
@misc{Loewen2010a,
abstract = {Elections are not the simple aggregation of millions of individual and independent decisions whether and for whom to vote. Nor are they simply about self-interested decisions. Elections are instead a competi- tion between groups of people who rely on more than self-interest when deciding when and how to participate in politics. These individuals engage in other-regarding behaviour in which they consider the benefits of an election outcome for whole groups of people. If we wish to understand the decision to participate in politics, we need to take account of this element of individual decision making.},
author = {Loewen, Peter John},
booktitle = {Canadian Journal of Political Science},
doi = {10.1017/S000842391000065X},
isbn = {0008-4239},
