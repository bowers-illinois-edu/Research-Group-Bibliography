author = {Bowers, Jake and Hansen, Ben B},
keywords = {randomization\_inference statistics},
month = jul,
title = {{Attributing Effects to A Cluster Randomized Get-Out-The-Vote Campaign: An Application of Randomization Inference Using Full Matching.}},
url = {http://www-personal.umich.edu/~jwbowers/PAPERS/bhPolmeth2005July.pdf},
year = {2005}
}
