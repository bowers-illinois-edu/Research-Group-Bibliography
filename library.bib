isbn = {9780470671436},
keywords = {Discussion-based media programs, citizens/politici,Informational media interventions, and news progra,Mass media and conflict, than mere social/politica,Mass media interventions, taking different forms,Media programs, aimed at rebuilding communities,Media, in reconstructing communities following con,Psychological predictors of post-conflict media in,Reconciliation radio program, influencing percepti,Reconciling theory with contextual constraints,Rwandan reconciliation radio, key role in war/geno},
pages = {284--298},
title = {{Media as an Instrument for Reconstructing Communities Following Conflict}},
