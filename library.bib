}
@article{Gerber1998a,
abstract = {Gerber challenges the traditional view that challenger spending is more effective at winning Senate elections than incumbent spending, because when OLS regressions are re-estimated using an instrumental variables such as candidate wealth, he finds that traditional OLS regressions have historically underestimated the effectiveness of incumbent spending. Although most research on campaign spending focuses on challengers rather than incumbents, incumbent spending clearly wins elections, making campaign spending a critical factor in the competitiveness of congressional elections. Spending limits applied to both challengers and incumbents favor those already elected. Therefore limits on campaign spending will only be detrimental to challengers. The author used a reduced form relationship to summarize the mechanism by which spending influences voting, which results in a useful approximation of a complicated process, and that further work is needed in areas such as sources of candidate funds.},
author = {Gerber, Alan},
doi = {10.2307/2585672},
isbn = {00030554},
issn = {00030554},
journal = {American Political Science Review},
pages = {401--411},
title = {{Estimating the effect of campaign spending on senate election outcomes using instrumental variables}},
url = {http://www.jstor.org/stable/10.2307/2585672},
volume = {92},
year = {1998}
}
@article{Ellman2000a,
abstract = {We study elections in which one party (the strong party) controls a source of political unrest; e.g., this party could instigate riots if it lost the election.We show that the strong party is more likely to win the election when there is less information about its ability to cause unrest. This is because when the weak party is better informed, it can more reliably prevent political unrest by implementing a ‘‘centrist’’ policy. When there is uncertainty over the credibility of the threat, ‘‘posturing’’ by the strong party leads to platform divergence.},
author = {Ellman, Matthew and Wantchekon, Leonard},
doi = {10.1162/003355300554836},
isbn = {00335533},
issn = {0033-5533},
journal = {The Quarterly Journal of Economics},
