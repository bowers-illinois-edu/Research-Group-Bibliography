@techreport{Beath2013c,
abstract = {The use of direct democracy is often proposed as a means of granting citizens greater control over public resource allocation decisions. Using a randomized field experiment conducted in 250 villages in Afghanistan, this study identifies the impact of secret-ballot referenda on the choice of development programs, as compared to decisions made through consultative public meetings. The use of referenda reduces the extent to which elites are able to influence the choice of projects and improves villagers’ satisfaction. The effect is particularly pronounced when the council overseeing the decision-making process was elected using single multi-member districts rather than multiple two-member districts.},
author = {Beath, Andrew and Christia, Fotini and Enikolopov, Ruben},
