volume = {68},
year = {2014}
}
@article{Rubenson2007a,
abstract = {We examine whether turnout has a partisan bias; specifically whether higher turnout would benefit parties and policies of the left. Using data from the 2000 Canadian Election Study, we analyze differences in opinion between voters and non-voters across a wide spectrum of policy areas in order to assess the extent of divergent views between voters and abstainers. Next, by simulating universal turnout we test the hypothesis that the outcome of the 2000 Canadian Federal Election would have been appreciably different if all citizens were to have voted. We find scant evidence for a partisan effect of turnout in Canada. Voters' opinions are, by and large, representative of the larger population and universal turnout would not have changed the election result. © 2006 Elsevier Ltd. All rights reserved.},
author = {Rubenson, Daniel and Blais, Andr\'{e} and Fournier, Patrick and Gidengil, Elisabeth and Nevitte, Neil},
