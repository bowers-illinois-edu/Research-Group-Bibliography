@misc{Mansfield2002,
abstract = {Over the past fifty years, barriers to international trade have decreased$\backslash$nsubstantially. A key source of this decline in protectionism has$\backslash$nbeen the proliferation of agreements among countries to liberalize$\backslash$ncommerce. In this article, we analyze the domestic political conditions$\backslash$nunder which states have concluded such agreements and, more generally,$\backslash$nexplore the factors affecting interstate economic cooperation. We$\backslash$nargue that interstate cooperation on commercial issues depends heavily$\backslash$non the political regime types of participants: as states become more$\backslash$ndemocratic, they are increasingly likely to conclude trade agreements.$\backslash$nTo test our claim, we examine whether the regime types of states$\backslash$nhave influenced their propensity to form and expand preferential$\backslash$ntrading arrangements (PTAs) during the period since World War II.$\backslash$nWe find that democratic countries are about twice as likely to form$\backslash$na PTA as autocratic countries, and that pairs of democracies are$\backslash$nroughly four times as likely to do so as autocratic pairs. These$\backslash$nresults provide strong evidence that democracies are more commercially$\backslash$ncooperative than less democratic countries.},
