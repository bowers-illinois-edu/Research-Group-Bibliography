@misc{Malesky2009,
abstract = {Previous empirical analysis has noted a correlation between Foreign$\backslash$nDirect Investment (FDI) and economic reform in Eastern Europe and$\backslash$nthe Former Soviet Union, but has attributed the relationship to investors$\backslash$nrewarding countries after reform decisions. Little attention has$\backslash$nbeen paid to the fact that investors' lobbying efforts may actually$\backslash$ninfluence reform choices. This paper finds a positive effect of FDI$\backslash$non reform progress through a panel analysis of investor influence$\backslash$nin 27 transition states (1991-2004). To address endogeneity bias,$\backslash$nthe exogenous portion of a country's exchange rate movement is used$\backslash$nas an instrument in a two-stage procedure. The underlying counterfactual$\backslash$ncomparison that results from this approach is between two similarly$\backslash$nsituated countries, but where one country experienced a large shift$\backslash$nin the share of FDI in its economy as a result of changes in the$\backslash$ninternational economy and the other did not. Further analysis reveals$\backslash$nthat the relationship is particularly strong in the manufacturing$\backslash$nand service sectors, but does not hold for construction, utilities,$\backslash$nor natural resource based projects.},
